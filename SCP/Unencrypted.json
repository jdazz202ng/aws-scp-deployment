{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyUnencryptedResources",
            "Effect": "Deny",
            "Action": [
                "rds:CreateDBInstance",
                "ec2:CreateVolume",
                "ec2:CreateSnapshot"
            ],
            "Resource": "*",
            "Condition": {
                "Bool": {
                    "aws:RequestTag/encrypted": "false"
                }
            }
        }
    ]
}
